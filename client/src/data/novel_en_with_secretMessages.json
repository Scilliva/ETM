      "content": "img",
      "image": "../../ETM/assets/locations/robots_round.png",
      "texts": [
        {
          "nickname": "Trust",
          "updatedCharacter": "../../ETM/assets/locations/TRUST_HAPPY.png",
          "text": "My name is Trust. And here are my 4 siblings: Supervision, Monitoring, Administration and Regulation"
        },
         {
          "nickname": "Trust",
          "text": "With me, Trust, we form the SMART system."
        },
        {
          "nickname": "Trust",
          "text": "My siblings have gone mad, uncontrollable. And they are now terrorizing the citizen of the Universal Digital Federation."
        },
        {
          "text": "Can you help fix them?"
        }
        ,
        {
          "nickname": "Player",
          "updatedCharacter": "../../ETM/assets/locations/Transparent.png",
          "text": "Sure! I joined the Rebels to free Luxembourg from SMART!"
        }
        ,
        {
          "nickname": "Player",
          "text": "SMART knows everything, SMART wants us good, SMART is at our service. That's what I was told..."
        },
        {
          "nickname": "Trust",
          "updatedCharacter": "../../ETM/assets/locations/TRUST_HAPPY.png",
          "text": "We just need to free the four districts of Luxembourg from my siblings!"
        }
      ],
      "buttons": [
        {
          "text": "Tell me more about the districts",
          "redirectId": "start3"
        },
        {
          "text": "I have destroyed all the cores!",
          "redirectId": "start3_final"
        }

