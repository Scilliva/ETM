    "emotionGame": {
      "name": "Emotion Game",
      "visible": 0,
      "id": "emotionGame",
      "content": "img",
      "image": "",
      "texts": [
        {
          "nickname": "Regulation",
          "updatedCharacter": "../../ETM/assets/locations/REGULATION_SAD.png",
          "text": "Why soo sad?"
        },
        {
          "nickname": "Regulation",
          "updatedCharacter": "../../ETM/assets/locations/REGULATION_HAPPY.png",
          "text": "How about a joke then? What is yellow and runs fast?"
        },
        {
          "nickname": "Regulation",
          "updatedCharacter": "../../ETM/assets/locations/REGULATION_HAPPY.png",
          "text": "A lemon squeeze!"
        },{
          "nickname": "Regulation",
          "updatedCharacter": "../../ETM/assets/locations/REGULATION_SAD.png",
          "text": "I know it is better in french..."
        },
        {
          "nickname": "Regulation",
          "updatedCharacter": "../../ETM/assets/locations/REGULATION_SAD.png",
          "text": "I see that you're not laughing... Let’s play a game then. But you need camera access for it!"
        },
        {
          "nickname": "Regulation",
          "text": "I will ask you to do an emotion with your face, six times. It can be sad, happy, neutral, surprised. I will give points if you do it well."
        },{
          "nickname": "Regulation",
          "text": "Each emotion will last 10 seconds. The longer your emotion matches the target, the more points you get. "
        },{
          "nickname": "Regulation",
          "text": " I will give you the codes if you beat 1000 points. The game will begin when you press the ‘right arrow’"
        },{
          "text": ""
        },{
          "text": "The game is over! You can play again from the map!"
        }
      ],
