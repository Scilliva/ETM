    "ageGame": {
      "name": "Age Game",
      "visible": 0,
      "id": "ageGame",
      "image": "",
      "content": "img",
      "texts": [
        {
          "nickname": "Yoann",
          "updatedCharacter": "../../ETM/assets/locations/MALE_HAPPY.png",
          "text": "Once you have the code, come back to see me on the Map!"
        },{
          "nickname": "Supervision",
          "updatedCharacter": "../../ETM/assets/locations/SUPERVISION.png",
          "text": "I have the best face recognition system!"
        },{
          "nickname": "Supervision",
          "text": "I can recognize the gender, the age, the race of any person, anytime in a fraction of seconds!"
        },{
          "nickname": "Supervision",
          "text": "Let’s have a bet: if you finish this challenge in less than 120s and 12 clicks, I will give you this core's Code"
        },
        {
          "nickname": "Supervision",
         "text": "In this challenge, you need to correctly guess the age of the Faces to beat my record."
        },
        {
          "nickname": "Supervision",
          "text": "On top of the grid, you have a target age. Your task is to find the face that matches the age."
        },{
          "nickname": "Supervision",
          "text": "You will start from the column on the left, and you can move to the next column if you find the correct face."
        },{
          "nickname": "Supervision",
          "text": "When you click on a face. It appears bigger on the right. It allows you to check if the face is the correct age. Click again on the small image to confirm your choice."
        },{
          "nickname": "Supervision",
          "text": "Be careful, images have been altered to try and trick face recognition!"
        },{
          "nickname": "Supervision",
          "text": "The game will start when you press the 'right arrow'. Be quick, be precise!"
        },{
          "updatedCharacter": "../../ETM/assets/locations/Transparent.png",
          "text": ""
        },{
          "text": "The game is over! You can play again from the map!"
        }
