    "ageGame": {
      "name": "Age Game",
      "visible": 0,
      "id": "ageGame",
      "image": "",
      "content": "img",
      "texts": [
        {
          "nickname": "Yoann",
          "updatedCharacter": "../../ETM/assets/locations/MALE_HAPPY.png",
          "text": "Once you have the code, come back to see me on the Map!"
        },{
          "nickname": "Supervision",
          "updatedCharacter": "../../ETM/assets/locations/SUPERVISION.png",
          "text": "I have the best face recognition system!"
        },{
          "nickname": "Supervision",
          "text": "I can recognize the gender, the age, the race of any person, anytime in a fraction of seconds!"
        },{
          "nickname": "Supervision",
          "text": "Let’s have a bet: if you finish this challenge in less than 120s and 12 clicks, I will give you this core's Code"
        },
        {
          "nickname": "Supervision",
         "text": "In this challenge, you need to correctly guess the age of the Faces to beat my record."
        },
